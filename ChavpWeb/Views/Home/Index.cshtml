@using ChavpWeb.Extensions
@model ChavpWeb.Models.IndexViewModel

@{
    ViewBag.Title = "Index";
}

User Name: @Html.KoTextBoxFor(m => m.UserName, new { }, true)
@Html.KoTextActionLink("Hello", "hello")

@section scripts{
    <script>
        function IndexViewModel() {
            this.UserName = ko.observable("Chavp");

            this.hello = function () {
    
                alert(this.UserName());

                return false;
            }
        }

        ko.applyBindings(new IndexViewModel());
    </script>
}